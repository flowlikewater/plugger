<div class="col-md-6 col-md-offset-1">
  <h1>MyApp</h1>

  <div class="posts">
    <% @posts.each do |post| %>
      <div class='post-panel'>
        <%= avatar_for(post.user, size: 40) %>
        <%= link_to post.user.username, user_path(post.user) %>
        <h3><%= post.title %></h3>
        <p><%= post.all_tags %></p>
      </div>
    <% end %>
  </div>
</div>
